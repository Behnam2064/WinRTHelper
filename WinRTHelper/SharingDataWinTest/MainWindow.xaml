<Window x:Class="SharingDataWinTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharingDataWinTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <TextBox DockPanel.Dock="Top" x:Name="tb1" Text="My text to share"/>
        <Button Content="Share my text" Click="OnShareText1" DockPanel.Dock="Top"  />

        <Button Content="Share image" Click="OnShareImage1" DockPanel.Dock="Top"  />
    </DockPanel>
</Window>
