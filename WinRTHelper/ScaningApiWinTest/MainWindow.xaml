<Window x:Class="ScaningApiWinTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaningApiWinTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button
            DockPanel.Dock="Top"
            Content="Scan to file"
            Click="OnScan1" />
        <Button
            DockPanel.Dock="Top"
            Content="Scan preview"
            Click="OnScan2" />

        <ProgressBar
            MinHeight="20"
            DockPanel.Dock="Top"
            x:Name="pb" />

        <Image
            DockPanel.Dock="Top"
            x:Name="img1" />
    </DockPanel>
</Window>
